---
import {projects} from '../../config/projects.json'
---

<h2 class="text-center text-5xl font-bold my-5 mt-10">Projects</h2>

{
    projects.map(project => (
        <div class="flex">
            <div class="flex-1">
                <h2>{project.title}</h2>
            <p>{project.description}</p>
            </div>
            <div class="">
                <img src={project.image} class="w-72 m-auto">
            </div>
        </div>
    ))
}